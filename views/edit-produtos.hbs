<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/cadastro">Cadastro</a></li>
    <li class="breadcrumb-item active" aria-current="page">Editar Produto</li>
  </ol>
</nav>

{{#if alert}}
<div class="alert alert-sucess alert-dismissible fade show" role="alert">
  {{alert}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#each rows}}
<form class="row g-3" method="POST" action="/editprodutos/{{this.id}}">
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" value="{{this.produtos_loja}}" name="produtos_loja">
      <label for="floatingInput">Nome do Produto</label>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" value="{{this.valor}}" name="Valor">
      <label for="floatingInput">Valor</label>
    </div>
  </div>

  <div class="col-12">
    <button class="btn btn-primary" type="submit">Enviar</button>
  </div>
</form>
{{/each}}